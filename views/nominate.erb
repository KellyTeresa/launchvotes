<div class="form-container">
  <div class="col-md-6 col-md-offset-3">

    <div class="form">
      <div>
        <h1 class="center">Nominate a Fellow Launcher:</h1>
      </div>

      <form action="/nominations" method="post" role="form">
        <div class="form-group">
          <label id="nominee_label" for="nomination_nominee_id">Nominee</label>
          <select class="roboto-sm form-control" id="nomination_nominee_id" name="nomination[nominee_id]">
            <option default>Choose Launcher</option>
            <% @users.each do |user| %>
              <option value="<%= user.id %>"><%= user.display_name %></option>
            <% end %>
          </select>
        </div>

        <label id="content_label" for="nomination_content">Content</label>
        <input type="text" maxlength="40" class="roboto-sm form-control" placeholder="<%= Nomination.examples.sample %>" id="nomination_content" name="nomination[content]" required />

        <div>
          <input type="submit" value="Submit" class="btn-submit roboto-sm"></input>
        </div>

      </form>
    </div>
  </div>
</div>
