<div class="jumbotron visible-lg">
  <div class="container jumbo-content">
    <div class="col-md-12 center">
      <h1 class="welcome">Welcome to LaunchVotes</h1>
      <h1 class="description">For Weekly Nominations</h1>
      <div class="col-md-6 col-md-offset-3">
        <div class="center">
          <button onclick="/auth/github" class="login-button roboto-sm"><a href="/auth/github" class="white"><span>Login with Github</span></a></button>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="form-container hidden-lg">
    <div class="col-md-6 col-md-offset-3">
      <div class="form">
      <div>
        <h1 class="center">Login to LaunchAwards:</h1>
      </div>
      <div class="center">
        <button onclick="/auth/github" class="button roboto-sm"><a href="/auth/github"><span class="blk">Login with Github</span></a></button>
      </div>
      </div>
    </div>
  </div>

  <div class="awards-container">
    <div class="col-md-12"><h1 class="title center">Last Week's Top Votes:</h1></div>
    <div class="row nomination-line">
      <% if @get_award_info == [] %>
        <div class="col-md-8 col-md-offset-4"><h1 class="make-nom">Make the first nomination!</h1></div>
      <% else %>
        <% @teaser_awards.each do |award| %>
          <div class="col-md-3">
            <div class="award">
              <div class="over">
                <img class="ribbon" src="../assets/ribbon.png">
              </div>
              <div class="top votes">
                <form action="/<%= award["id"]%>" method="post">
                  <input type="submit" value="<%= award["votes"] %>" class="votes" disabled>
                </form>
              </div>
              <div class="under">
                <% if award["pic_url"] == nil %>
                  <img class="prof-pic" src="../assets/placeholder.jpg">
                <% else %>
                  <img class="prof-pic" src="<%= award["pic_url"] %>">
                <% end %>
              </div>
              <div>
                <h2 class="launcher-name"><%= award["name"] %></h2>
              </div>
              <h2 class="award-title"><%= award["content"] %></h2>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
